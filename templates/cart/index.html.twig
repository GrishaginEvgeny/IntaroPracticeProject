{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    {% include 'base/header.html.twig' with {header} %}
    <div class="example-wrapper">
        <div class="container" style="margin-bottom: 50px; ">
            <div class="row lkBox">
                <div class="col-2 lkHr ">
                    <div class="row lkPanel mt-5">
                        <a href="/lk" style="text-decoration: none" class="lkBlock lkPanelButton" id="profile_submit">Профиль</a>
                    </div>
                    <div class="row lkPanel">
                        <a href="/" style="text-decoration: none" class="lkBlock lkPanelButton"
                           id="personal_data_submit">Главная</a>
                    </div>
                    <div class="row lkPanel">
                        <a href="/cart" style="text-decoration: none" class="lkBlock lkPanelButton lkActive" id="orders_submit" >Корзина</a>
                    </div>
                    <div class="row lkPanel">
                        <a href="/lk/history" style="text-decoration: none" class="lkBlock lkPanelButton"
                           id="orders_submit">История заказов</a>
                    </div>
                    <div class="row lkPanel mb-5">
                        <a href="/logout" style="text-decoration: none"
                           class="lkBlock lkPanelButton rounded-pill">Выход</a>
                    </div>
                </div>
                <div class="col-10 lkInfo" id="basket">
                    <div id="close" class="row"
                         style="height: 600px; overflow: auto; justify-content: center; justify-content: center; margin: 6% 3%;">
                        <div class="col-lg-6 col-md-12 pe-3">
                            {% for offer in offers %}
                                <div class="d-flex justify-content-start mb-3">
                                    <div class="col-4 me-2">
                                        <img src="/upload/pictures/{{ offer.picture }}"
                                             style="object-fit: cover; object-position: center; height: 110px; width: 90px">
                                    </div>
                                    <div class="col-8">
                                        <div class="d-flex justify-content-between">
                                            <h6 class="text-white">
                                                <a style="text-decoration: none; color: white;"
                                                   href="/product/{{ offer.product_id }}">{{ offer.name }}</a>
                                            </h6>
                                        </div>
                                         <p ><small class="text-muted">{% if 'color' in offer.properties|keys %} {{ 'Цвет: '~offer.properties.color }} {% else %} Цвет не указан {% endif %}, {% if 'size' in offer.properties|keys %} {{  'Размер: '~offer.properties.size }} {% else %} Размер не указан {% endif %}</small></p>
                                        <div class="d-flex justify-content-between">
                                            <p class="text-white"> Кол-во: {{ offer.count }} </p>
                                            <div>
                                                <a style=" text-decoration: none; color: white;"
                                                   href="/cart/plus/{{ offer.offer_id }}">+</a>
                                                {{ offer.count }}
                                                <a style=" text-decoration: none; color: white;"
                                                   href="/cart/minus/{{ offer.offer_id }}">-</a>
                                            </div>
                                            <p class="text-white">{{ offer.price * offer.count }} P</p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="col-lg-6 col-md-12 mt-md-5 mt-lg-0 ps-3">
                            <form method="post" action="{{ path('app_order') }}">
                                <h5 class="text-uppercase text-white text-center">подтверждение</h5>
                                <div class="mb-3">
                                    <input name="address" type="text" class="form-control bg-black text-white" id="address"
                                           placeholder="АДРЕС ДОСТАВКИ" required="">
                                </div>
                                    <label for="country" class="form-label text-white">Способ оплаты</label>
                                    <select name="paymentType" class="form-select text-update bg-black text-white" id="country"
                                            required="">
                                        {% for paymentType in paymentTypes %}
                                            <option value="{{ paymentType }}" class="text-white">{{ paymentType }}</option>
                                        {% endfor %}
                                    </select>
                                <hr class="my-2">
                                    <label for="country1231" class="form-label text-white">Способ доставки</label>
                                    <select name="deliveryType" class="form-select text-update bg-black text-white" id="country1231"
                                            required="">
                                        {% for deliveryType in deliveryTypes %}
                                            <option value="{{ deliveryType }}" class="text-white">{{ deliveryType }}</option>
                                        {% endfor %}
                                    </select>
                                <hr class="my-3">
                                <div class="d-flex justify-content-between mt-3">
                                    <p class="text-uppercase text-white">Итоговая стоимость:</p>
                                    <p class="text-uppercase text-white"> {{ totalPrice }} Р</p>
                                </div>
                                <button class="w-100 btn btn-light btn-lg" type="submit">Подтвердить заказ</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include 'base/footer.html.twig' %}
    </div>
{% endblock %}
